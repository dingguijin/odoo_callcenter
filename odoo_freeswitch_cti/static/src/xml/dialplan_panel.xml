<?xml version="1.0" encoding="UTF-8"?>
<templates>

  <t t-name="panel_link_template">
    <div class="o_flow_panel_card">
      <div class="o_flow_panel_card_title">
        Link
      </div>
      <div class="o_flow_panel_card_body">
        <table class="o_flow_panel_link_table">
          <thead>
            <tr>
              <th>Event</th>
              <th>Next Node</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="widget.node.node_path" t-as="path">
              <tr>
                <td><strong><t t-esc="path"/></strong></td>
                <td class="o_flow_panel_node_td">
                  <div>
                    <select class="o_flow_panel_node_select o_input" t-attf-id="{{'o_flow_panel_node_select_'+path}}" type="select"/>
                  </div>
                </td>
              </tr>
            </t>
          </tbody>
        </table>
      </div>
    </div>
  </t>

  <t t-name="panel_selection_template">
    <div class="o_flow_panel_card o_field_widget">
      <div class="o_flow_panel_card_title">
        <t t-esc="widget.selection.label"/>
      </div>
      <div class="o_flow_panel_card_body">
        <div class="o_flow_panel_card_input_container">
          <select class="o_flow_panel_select o_input" t-att-name="widget.selection.name" t-att-id="widget.selection.id" t-att-value="widget.selection.value" type="select">
            
          </select>
        </div>
      </div>
    </div>
  </t>
  
  <t t-name="panel_input_template">
    <div class="o_flow_panel_card o_field_widget">
      <div class="o_flow_panel_card_title">
        <t t-esc="widget.input.label"/>
      </div>
      <div class="o_flow_panel_card_body">
        <div class="o_flow_panel_card_input_container">
          <div class="o_flow_panel_card_input">
            <t t-if="!widget.is_readonly">
              <input t-att-name="widget.input.name" t-att-value="widget.input.value" class="o_input o_field_char o_required_modifier" />
            </t>
            <t t-else="widget.is_readonly">
              <span t-esc="widget.input.value"/>
            </t>
          </div>
          <div class="o_flow_panel_card_input_button" t-if="!widget.hide_buttons">
            <t t-if="!widget.is_readonly">
              <span class="o_flow_panel_card_input_button_save">
                <i class="fa fa-check"></i>
                Save
              </span>
            </t>
            <t t-else="widget.is_readonly">
              <span class="o_flow_panel_card_input_button_edit">
                <i class="fa fa-pencil"></i>
                Edit
              </span>
            </t>
          </div>
        </div>
      </div>
    </div>
  </t>

  <t t-name="panel_params_template">
    <div class="o_flow_panel_card">
      <div class="o_flow_panel_card_title">
        Node Parameters
      </div>

      <div class="o_flow_panel_card_body">        
        <div class="o_flow_panel_params">                    
        </div>        
      </div>
    </div>

  </t>
  
  <t t-name="panel_widget_template">
    <div class="o_flow_panel_widget">
    </div>
  </t>

</templates>
